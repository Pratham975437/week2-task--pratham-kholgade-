import requests

def currency_converter():
    # Base currency
    base = input("Enter base currency (e.g., USD, EUR, INR): ").upper()
  
    target = input("Enter target currency (e.g., USD, EUR, INR): ").upper()
 
    amount = float(input(f"Enter amount in {base}: "))

    # API endpoint 
    url = f"https://open.er-api.com/v6/latest/{base}"

    try:
        response = requests.get(url)
        data = response.json()

        if response.status_code == 200 and "rates" in data:
            if target in data["rates"]:
                rate = data["rates"][target]
                converted = amount * rate
                print(f"\n{amount} {base} = {converted:.2f} {target}")
            else:
                print("❌ Target currency not found.")
        else:
            print("❌ Error fetching exchange rates. Try another currency code.")

    except Exception as e:
        print("⚠️ Error:", e)


currency_converter()
